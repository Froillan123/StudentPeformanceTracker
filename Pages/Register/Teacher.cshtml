@page "/Register/Teacher"
@model StudentPeformanceTracker.Pages.Register.TeacherModel
@{
    Layout = null;
    ViewData["Title"] = "Teacher Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Registration - Student Portal</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    
    <style>
        .register-container {
            min-height: 100vh;
        }
        
        .welcome-section {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/welcome_image.png');
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
        }
        
        .btn-primary-custom {
            background-color: #4a6bff;
            border: none;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-primary-custom:hover {
            background-color: #3a5bef;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(74, 107, 255, 0.3);
        }
        
        .form-control:focus {
            border-color: #4a6bff;
            box-shadow: 0 0 0 0.2rem rgba(74, 107, 255, 0.25);
        }
    </style>
</head>
<body>
    <div class="container-fluid register-container">
        <div class="row h-100">
            <!-- Left Section - Welcome -->
            <div class="col-lg-6 col-md-12 p-4 d-flex align-items-stretch">
                <div class="welcome-section w-100 rounded-3 d-flex flex-column justify-content-between text-white p-5">
                    <div>
                        <h2 class="mb-2 fs-3 fw-normal">Welcome to</h2>
                        <h1 class="mb-4 fw-bold display-5">GRADIA</h1>
                    </div>
                </div>
            </div>

            <!-- Right Section - Registration Form -->
            <div class="col-lg-6 col-md-12 p-4 d-flex align-items-center justify-content-center">
                <div class="w-100" style="max-width: 500px;">
                    <h2 class="fw-bold m-3 text-center">TEACHER REGISTRATION</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Model.ErrorMessage
                        </div>
                    }

                    <form method="post" id="teacherRegistrationForm">
                        <!-- Account Information -->
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-user-lock me-2"></i>Account Information
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-circle me-2"></i>Username <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" name="Username" placeholder="Enter your Username" required>
                                <div class="form-text">Choose a unique username for login</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-2"></i>Email Address <span class="text-danger">*</span>
                                </label>
                                <input type="email" class="form-control" name="Email" placeholder="Enter Email Address" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-2"></i>Password <span class="text-danger">*</span>
                                </label>
                                <input type="password" class="form-control" name="Password" placeholder="Enter your Password" required>
                                <div class="form-text">Minimum 8 characters</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-2"></i>Confirm Password <span class="text-danger">*</span>
                                </label>
                                <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm your Password" required>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Personal Information -->
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-user me-2"></i>Personal Information
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user me-2"></i>First Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" name="FirstName" placeholder="Enter First Name" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user me-2"></i>Last Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" name="LastName" placeholder="Enter Last Name" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone me-2"></i>Phone Number
                                </label>
                                <input type="tel" class="form-control" name="Phone" placeholder="Enter Phone Number">
                                <div class="form-text">Optional</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar me-2"></i>Hire Date
                                </label>
                                <input type="date" class="form-control" name="HireDate">
                                <div class="form-text">Optional</div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Department Information -->
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-building me-2"></i>Department Information
                        </h5>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-university me-2"></i>Department <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" name="DepartmentId" required>
                                <option value="" disabled selected>Select a department...</option>
                            </select>
                            <div class="form-text">Choose your department</div>
                        </div>

                        <button type="submit" class="btn btn-primary-custom text-white w-100 rounded-2 fw-semibold mt-3">
                            <i class="fas fa-chalkboard-teacher me-2"></i>Register as Teacher
                        </button>
                        
                        <div class="text-center mt-4">
                            <span class="text-muted">Already have an account? </span>
                            <a href="/LoginPage" class="fw-semibold text-decoration-none">Login Here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Load departments
            loadDepartments();
            
            // Form validation
            const form = document.getElementById('teacherRegistrationForm');
            const password = document.querySelector('input[name="Password"]');
            const confirmPassword = document.querySelector('input[name="ConfirmPassword"]');
            
            if (password && confirmPassword) {
                // Password confirmation validation
                confirmPassword.addEventListener('input', function() {
                    if (password.value !== confirmPassword.value) {
                        confirmPassword.setCustomValidity('Passwords do not match');
                    } else {
                        confirmPassword.setCustomValidity('');
                    }
                });
                
                // Form submission
                form.addEventListener('submit', function(e) {
                    if (password.value !== confirmPassword.value) {
                        e.preventDefault();
                        alert('Passwords do not match!');
                        return;
                    }
                });
            }
        });
        
        async function loadDepartments() {
            try {
                const response = await fetch('/api/v1/department');
                if (response.ok) {
                    const departments = await response.json();
                    const select = document.querySelector('select[name="DepartmentId"]');
                    
                    if (select) {
                        departments.forEach(dept => {
                            const option = document.createElement('option');
                            option.value = dept.id;
                            option.textContent = dept.departmentName;
                            select.appendChild(option);
                        });
                    }
                } else {
                    console.error('Failed to load departments');
                }
            } catch (error) {
                console.error('Error loading departments:', error);
            }
        }
    </script>
</body>
</html>