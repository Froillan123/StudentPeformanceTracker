@page
@model RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Register - Student Portal</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow-x: hidden;
        }

        .register-container {
            min-height: 100vh;
            display: flex;
            padding: 0;
            margin: 0;
            width: 100%;
        }
        
        .welcome-section {
            background: linear-gradient(rgba(102, 126, 234, 0.6), rgba(118, 75, 162, 0.6)), url('/images/welcome_image.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 3rem;
            width: 50%;
            min-height: 100vh;
        }

        .welcome-content {
            position: relative;
            z-index: 2;
        }

        .welcome-section h1, 
        .welcome-section h2,
        .welcome-section p {
            position: relative;
            z-index: 2;
        }
        
        .btn-primary-custom {
            background-color: #4a6bff;
            border: none;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-primary-custom:hover {
            background-color: #3a5bef;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(74, 107, 255, 0.3);
        }

        
        .form-control:focus {
            border-color: #4a6bff;
            box-shadow: 0 0 0 0.2rem rgba(74, 107, 255, 0.25);
        }
        
        .form-section {
            display: none;
        }
        
        .form-section.active {
            display: block;
        }
        
        .progress-bar {
            background-color: #4a6bff;
        }
        
        .step-indicator {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #dee2e6;
            color: #6c757d;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        
        .step-indicator.active {
            background-color: #4a6bff;
            color: white;
        }
        
        .step-label {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 0.5rem;
        }
        
        .step-label.active {
            color: #4a6bff;
            font-weight: 600;
        }

        .form-container {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background-color: #ffffff;
            width: 50%;
            min-height: 100vh;
        }

        @@media (max-width: 768px) {
            .register-container {
                flex-direction: column;
            }
            
            .welcome-section {
                width: 100%;
                min-height: 40vh;
            }

            .form-container {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Left Section - Welcome with Image -->
        <div class="welcome-section text-white">
            <div class="welcome-content">
                        <h2 class="mb-2 fs-3 fw-normal">Welcome to</h2>
                <h1 class="mb-4 fw-bold display-4">GRADIA</h1>
                <p class="fs-5 mb-4">Your Student Performance Tracker</p>
                </div>
            </div>

            <!-- Right Section - Registration Form -->
        <div class="form-container">
                <div class="w-100" style="max-width: 500px;">
                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-2">REGISTER</h2>
                    <p class="text-muted">Create your student account</p>
                </div>
                
                <!-- Back to Login button -->
                <div class="text-center mb-3">
                    <a asp-page="/LoginPage" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Login
                    </a>
                </div>
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Model.ErrorMessage
                        </div>
                    }
                    
                    <!-- Progress Indicator -->
                    <div class="mb-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex flex-column align-items-center">
                                <div class="step-indicator active" id="step1-indicator">1</div>
                                <div class="step-label active" id="step1-label">Personal Info</div>
                            </div>
                            <div class="flex-grow-1 mx-2">
                                <div class="progress" style="height: 4px;">
                                    <div class="progress-bar" role="progressbar" style="width: 0%" id="progress-bar"></div>
                                </div>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <div class="step-indicator" id="step2-indicator">2</div>
                                <div class="step-label" id="step2-label">Account Info</div>
                            </div>
                        </div>
                    </div>

                    <form method="post" id="registrationForm">
                        <!-- Step 1: Personal Information -->
                        <div class="form-section active" id="step1">
                            <h5 class="fw-bold mb-3">
                                <i class="fas fa-user me-2"></i>Personal Information
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">First Name *</label>
                                    <input type="text" class="form-control" name="FirstName" placeholder="Enter First Name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Last Name *</label>
                                    <input type="text" class="form-control" name="LastName" placeholder="Enter Last Name" required>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-envelope me-2"></i>Email Address *
                                    </label>
                                    <input type="email" class="form-control" name="Email" placeholder="Enter Email Address" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-phone me-2"></i>Phone Number
                                    </label>
                                    <input type="tel" class="form-control" name="Phone" placeholder="Enter Phone Number">
                                </div>
                            </div>
                            
                            <hr class="my-4">

                            <h5 class="fw-bold mb-3">
                                <i class="fas fa-graduation-cap me-2"></i>Academic Information
                            </h5>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Course *</label>
                                <select class="form-select" name="CourseId" id="courseSelect" required>
                                    <option value="" disabled selected>Select Course</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Year Level *</label>
                                <select class="form-select" name="YearLevel" required>
                                    <option value="" disabled selected>Select Year Level</option>
                                    <option value="1">1st Year</option>
                                    <option value="2">2nd Year</option>
                                    <option value="3">3rd Year</option>
                                    <option value="4">4th Year</option>
                                    <option value="5">5th Year</option>
                                </select>
                            </div>

                            <button type="button" class="btn btn-primary-custom text-white w-100 rounded-2 fw-semibold mt-3" onclick="nextStep()">
                                <i class="fas fa-arrow-right me-2"></i>Proceed
                            </button>
                        </div>

                        <!-- Step 2: Account Information -->
                        <div class="form-section" id="step2">
                            <h5 class="fw-bold mb-3">
                                <i class="fas fa-user-lock me-2"></i>Account Information
                            </h5>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-id-card me-2"></i>Student Number *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">ucmn-</span>
                                    <input type="text" class="form-control" name="StudentNumber" placeholder="Enter your Student Number" required>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-circle me-2"></i>Username *
                                </label>
                                <input type="text" class="form-control" name="Username" placeholder="Enter your Username" required>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-2"></i>Password *
                                </label>
                                <input type="password" class="form-control" name="Password" placeholder="Enter your Password" required>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-2"></i>Confirm Password *
                                </label>
                                <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm your Password" required>
                            </div>

                            <button type="submit" class="btn btn-primary-custom text-white w-100 rounded-2 fw-semibold mt-3">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                            
                            <div class="text-center mt-4">
                                <span class="text-muted">Already have an account? </span>
                                <a asp-page="/LoginPage" class="fw-semibold text-decoration-none">Login Here</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentStep = 1;
        const totalSteps = 2;

        function nextStep() {
            if (currentStep < totalSteps) {
                // Hide current step
                document.getElementById(`step${currentStep}`).classList.remove('active');
                document.getElementById(`step${currentStep}-indicator`).classList.remove('active');
                document.getElementById(`step${currentStep}-label`).classList.remove('active');
                
                // Show next step
                currentStep++;
                document.getElementById(`step${currentStep}`).classList.add('active');
                document.getElementById(`step${currentStep}-indicator`).classList.add('active');
                document.getElementById(`step${currentStep}-label`).classList.add('active');
                
                // Update progress bar
                const progress = ((currentStep - 1) / (totalSteps - 1)) * 100;
                document.getElementById('progress-bar').style.width = `${progress}%`;
            }
        }

        function prevStep() {
            if (currentStep > 1) {
                // Hide current step
                document.getElementById(`step${currentStep}`).classList.remove('active');
                document.getElementById(`step${currentStep}-indicator`).classList.remove('active');
                document.getElementById(`step${currentStep}-label`).classList.remove('active');
                
                // Show previous step
                currentStep--;
                document.getElementById(`step${currentStep}`).classList.add('active');
                document.getElementById(`step${currentStep}-indicator`).classList.add('active');
                document.getElementById(`step${currentStep}-label`).classList.add('active');
                
                // Update progress bar
                const progress = ((currentStep - 1) / (totalSteps - 1)) * 100;
                document.getElementById('progress-bar').style.width = `${progress}%`;
            }
        }

        // Add back button functionality to step 2
        document.addEventListener('DOMContentLoaded', function() {
            const step2Section = document.getElementById('step2');
            const backButton = document.createElement('button');
            backButton.type = 'button';
            backButton.className = 'btn btn-outline-secondary w-100 rounded-2 fw-semibold mt-2';
            backButton.innerHTML = '<i class="fas fa-arrow-left me-2"></i>Back';
            backButton.onclick = prevStep;
            
            const submitButton = step2Section.querySelector('button[type="submit"]');
            submitButton.parentNode.insertBefore(backButton, submitButton.nextSibling);

            // Load courses on page load
            loadCourses();
        });

        // Load courses from API
        async function loadCourses() {
            try {
                const response = await fetch('/api/v1/course');
                if (response.ok) {
                    let coursesRaw = await response.json();
                    let courses = Array.isArray(coursesRaw) ? coursesRaw : (Array.isArray(coursesRaw.data) ? coursesRaw.data : []);
            const courseSelect = document.getElementById('courseSelect');
                    
                    // Clear existing options except the first one
                    courseSelect.innerHTML = '<option value="" disabled selected>Select Course</option>';
                    
                    courses.forEach(course => {
                        const option = document.createElement('option');
                        option.value = course.id;
                        option.textContent = course.courseName;
                        courseSelect.appendChild(option);
                    });
                } else {
                    console.error('Failed to load courses');
                }
            } catch (error) {
                console.error('Error loading courses:', error);
            }
        }
    </script>
</body>
</html>
</html>
</html>