            if (searchValue) {
                searchDashboard(searchValue);
            } else {
                loadStudentManagement(page);
                loadTeacherManagement();
            }
        }

        // Store all data for search
        let allStudents = [];
        let allTeachers = [];

        // Load all data for search
        async function loadAllDataForSearch() {
            try {
                const [studentsResponse, teachersResponse] = await Promise.all([
                    fetch('/api/v1/student?page=1&pageSize=1000'),
                    fetch('/api/v1/teacher?page=1&pageSize=1000')
                ]);

                if (studentsResponse.ok) {
                    const result = await studentsResponse.json();
                    allStudents = result.data || [];
                }

                if (teachersResponse.ok) {
                    const result = await teachersResponse.json();
                    allTeachers = result.data || result.Data || [];
                }
            } catch (error) {
                console.error('Error loading data for search:', error);
            }
        }

        // Search dashboard (filters both students and teachers)
        function searchDashboard(searchValue) {
            const searchLower = searchValue.toLowerCase().trim();
            
            if (!searchLower) {
                loadStudentManagement(1);
                loadTeacherManagement();
                return;
            }

            // Filter students
            const filteredStudents = allStudents.filter(s => {
                const fullName = `${s.firstName || ''} ${s.lastName || ''}`.toLowerCase();
                const studentId = (s.studentId || '').toLowerCase();
                const email = (s.email || '').toLowerCase();
                const courseName = (s.courseName || '').toLowerCase();
                const yearLevel = (s.yearLevel || '').toString();
                
                return fullName.includes(searchLower) ||
                       studentId.includes(searchLower) ||
                       email.includes(searchLower) ||
                       courseName.includes(searchLower) ||
                       yearLevel.includes(searchLower);
            });

            // Filter teachers
            const filteredTeachers = allTeachers.filter(t => {
                const firstName = (t.firstName || t.FirstName || '').toLowerCase();
                const lastName = (t.lastName || t.LastName || '').toLowerCase();
                const fullName = `${firstName} ${lastName}`.toLowerCase();
                const email = (t.email || t.Email || '').toLowerCase();
                const qualification = (t.highestQualification || t.HighestQualification || '').toLowerCase();
                
                return fullName.includes(searchLower) ||
                       email.includes(searchLower) ||
                       qualification.includes(searchLower);
            });

            // Display filtered results (show first 5 students and first 4 teachers)
            displayStudentManagement(filteredStudents.slice(0, 5));
            displayTeacherManagement(filteredTeachers.slice(0, 4));
        }

        // Handle search input with debounce
        let searchTimeout;
        function handleSearchInput(event) {
            clearTimeout(searchTimeout);
            
            if (event.key === 'Enter') {
                const searchValue = document.getElementById('searchText')?.value.trim() || '';
                if (searchValue) {
                    searchDashboard(searchValue);
                } else {
