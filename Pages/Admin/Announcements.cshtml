@page "/Admin/Announcements"
@model StudentPeformanceTracker.Pages.Admin.AdminAnnouncementsModel
@{
    ViewData["Title"] = "Announcements";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Portal</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .announcement-card {
            border-left: 4px solid #3498db;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        
        .announcement-card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .announcement-card.important {
            border-left-color: #f39c12;
        }
        
        .announcement-card.urgent {
            border-left-color: #e74c3c;
        }
        
        .priority-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    @await Html.PartialAsync("Shared/_AdminNavigation")

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Dashboard Header -->
        <header class="dashboard-header">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">General Announcements</h1>
                    <div class="d-flex align-items-center">
                        <button class="btn btn-primary me-2" onclick="showCreateModal()">
                            <i class="fas fa-plus me-1"></i>New Announcement
                        </button>
                        <div class="dropdown">
                            <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="https://ui-avatars.com/api/?name=Loading&background=3498db&color=fff" class="user-avatar me-2" id="headerAvatar">
                                <span id="headerName">Loading...</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/Admin/Profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" onclick="handleLogout()"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="container my-4">
            <!-- Announcements Content -->
            <div class="card-custom">
                <h3 class="section-title">General Announcements</h3>
                <div id="announcementsContainer">
                    <div class="text-center py-5">
                        <i class="fas fa-spinner fa-spin fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Loading announcements...</p>
                    </div>
                </div>
            </div>
        </main>
    </div>
                
    <!-- Create/Edit Announcement Modal -->
    <div class="modal fade" id="announcementModal" tabindex="-1" aria-labelledby="announcementModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="announcementModalLabel">New General Announcement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="announcementForm">
                        <input type="hidden" id="announcementId" value="">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>General Announcement:</strong> This announcement will be visible to all students and teachers.
                        </div>
                        <div class="mb-3">
                            <label for="announcementTitle" class="form-label">Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="announcementTitle" required maxlength="200">
                        </div>
                        <div class="mb-3">
                            <label for="announcementContent" class="form-label">Content <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="announcementContent" rows="5" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="announcementPriority" class="form-label">Priority <span class="text-danger">*</span></label>
                            <select class="form-select" id="announcementPriority" required>
                                <option value="General">General</option>
                                <option value="Important">Important</option>
                                <option value="Urgent">Urgent</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="saveAnnouncement()">Save Announcement</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Toggle sidebar functionality
        document.getElementById('toggleBtn').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const toggleIcon = this.querySelector('i');
            
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
            
            if (sidebar.classList.contains('collapsed')) {
                toggleIcon.classList.remove('fa-chevron-left');
                toggleIcon.classList.add('fa-chevron-right');
            } else {
                toggleIcon.classList.remove('fa-chevron-right');
                toggleIcon.classList.add('fa-chevron-left');
            }
        });
        
        let currentAdminId = null;
        let announcementModal = null;
        
        // Load admin data on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadAdminData();
            announcementModal = new bootstrap.Modal(document.getElementById('announcementModal'));
        });

        // Load admin data from API
        async function loadAdminData() {
            try {
                const response = await fetch('/api/v1/admin/profile', { credentials: 'include' });
                if (response.ok) {
                    const adminData = await response.json();
                    currentAdminId = adminData.id;
                    updateHeader(adminData);
                    loadAnnouncements();
                } else {
                    console.error('Failed to load admin data');
                }
            } catch (error) {
                console.error('Error loading admin data:', error);
            }
        }

        // Update header with real admin data
        function updateHeader(data) {
            const fullName = `${data.firstName} ${data.lastName}`;
            document.getElementById('headerName').textContent = fullName;
            document.getElementById('headerAvatar').src = `https://ui-avatars.com/api/?name=${encodeURIComponent(fullName)}&background=3498db&color=fff`;
        }

        // Load announcements
        async function loadAnnouncements() {
            try {
                const response = await fetch('/api/v1/announcement/admin/general', { credentials: 'include' });
                if (response.ok) {
                    const announcements = await response.json();
                    displayAnnouncements(announcements);
                } else {
                    displayErrorState();
                }
            } catch (error) {
                console.error('Error loading announcements:', error);
                displayErrorState();
            }
        }

        // Display announcements
        function displayAnnouncements(announcements) {
            const container = document.getElementById('announcementsContainer');
            if (!container) return;

            if (!announcements || announcements.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-5">
                        <i class="fas fa-bullhorn fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Announcements</h4>
                        <p class="text-muted">There are no general announcements at this time.</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = announcements.map(announcement => {
                const isOwn = announcement.adminId === currentAdminId;
                const priorityClass = announcement.priority === 'Urgent' ? 'urgent' : 
                                     announcement.priority === 'Important' ? 'important' : '';
                const badgeClass = announcement.priority === 'Urgent' ? 'bg-danger' : 
                                  announcement.priority === 'Important' ? 'bg-warning' : 'bg-primary';
                const formattedDate = new Date(announcement.createdAt).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                return `
                    <div class="card announcement-card ${priorityClass}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-2">
                                        <h5 class="card-title mb-0 me-2">${escapeHtml(announcement.title)}</h5>
                                        <span class="badge ${badgeClass} priority-badge">${announcement.priority}</span>
                                        <span class="badge bg-info ms-2">General</span>
                                    </div>
                                    <p class="card-text mb-2">${escapeHtml(announcement.content)}</p>
                                    <small class="text-muted d-block mb-2">
                                        <i class="fas fa-users me-1"></i><strong>Audience:</strong> All Students and Teachers
                                    </small>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small class="text-muted">
                                            <i class="fas fa-user-shield me-1"></i>${escapeHtml(announcement.adminName || 'Admin')}
                                            <i class="fas fa-calendar ms-3 me-1"></i>${formattedDate}
                                        </small>
                                        ${isOwn ? `
                                            <div>
                                                <button class="btn btn-sm btn-outline-primary me-1" onclick="editAnnouncement(${announcement.id})">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteAnnouncement(${announcement.id})">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </div>
                                        ` : ''}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Show create modal
        function showCreateModal() {
            document.getElementById('announcementModalLabel').textContent = 'New General Announcement';
            document.getElementById('announcementForm').reset();
            document.getElementById('announcementId').value = '';
            announcementModal.show();
        }

        // Edit announcement
        async function editAnnouncement(id) {
            try {
                const response = await fetch(`/api/v1/announcement/${id}`, { 
                    credentials: 'include' 
                });
                if (response.ok) {
                    const announcement = await response.json();
                    document.getElementById('announcementModalLabel').textContent = 'Edit General Announcement';
                    document.getElementById('announcementId').value = announcement.id;
                    document.getElementById('announcementTitle').value = announcement.title;
                    document.getElementById('announcementContent').value = announcement.content;
                    document.getElementById('announcementPriority').value = announcement.priority;
                    announcementModal.show();
                } else {
                    const error = await response.json();
                    alert(error.message || 'Failed to load announcement details');
                }
            } catch (error) {
                console.error('Error loading announcement:', error);
                alert('Error loading announcement details');
            }
        }

        // Save announcement
        async function saveAnnouncement() {
            const id = document.getElementById('announcementId').value;
            const title = document.getElementById('announcementTitle').value.trim();
            const content = document.getElementById('announcementContent').value.trim();
            const priority = document.getElementById('announcementPriority').value;

            if (!title || !content || !priority) {
                alert('Please fill in all required fields.');
                return;
            }

            const announcementData = {
                title: title,
                content: content,
                priority: priority
            };

            try {
                const url = id 
                    ? `/api/v1/announcement/admin/general/${id}`
                    : '/api/v1/announcement/admin/general';
                const method = id ? 'PUT' : 'POST';

                const response = await fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify(announcementData)
                });

                if (response.ok) {
                    announcementModal.hide();
                    loadAnnouncements();
                    alert(id ? 'Announcement updated successfully!' : 'Announcement created successfully!');
                } else {
                    const error = await response.json();
                    alert(error.message || 'Failed to save announcement');
                }
            } catch (error) {
                console.error('Error saving announcement:', error);
                alert('Error saving announcement');
            }
        }

        // Delete announcement
        async function deleteAnnouncement(id) {
            if (!confirm('Are you sure you want to delete this announcement?')) {
                return;
            }

            try {
                const response = await fetch(`/api/v1/announcement/admin/general/${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });

                if (response.ok) {
                    loadAnnouncements();
                    alert('Announcement deleted successfully!');
                } else {
                    const error = await response.json();
                    alert(error.message || 'Failed to delete announcement');
                }
            } catch (error) {
                console.error('Error deleting announcement:', error);
                alert('Error deleting announcement');
            }
        }

        // Display error state
        function displayErrorState() {
            const container = document.getElementById('announcementsContainer');
            if (container) {
                container.innerHTML = `
                    <div class="text-center py-5">
                        <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                        <h4 class="text-muted">Error Loading Announcements</h4>
                        <p class="text-muted">Failed to load announcements. Please try again.</p>
                        <button class="btn btn-primary" onclick="loadAnnouncements()">
                            <i class="fas fa-refresh me-2"></i>Retry
                        </button>
                    </div>
                `;
            }
        }

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
</html>

