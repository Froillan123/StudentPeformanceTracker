        function displayEnrolledClasses(classes, grades) {
            const container = document.getElementById('viewStudentClasses');
            if (!classes || classes.length === 0) {
                container.innerHTML = '<p class="text-muted mb-0">No enrolled classes found.</p>';
                return;
            }

            // Build class grades map from grades array
            const classGradesMap = {};
            if (grades && grades.length > 0) {
                grades.forEach(grade => {
                    // Handle both camelCase and PascalCase
                    const key = grade.studentSubjectId || grade.StudentSubjectId || grade.sectionSubjectId || grade.SectionSubjectId;
                    if (!key) return;
                    
                    if (!classGradesMap[key]) {
                        classGradesMap[key] = { midterm: null, final: null };
                    }
                    const assessmentType = grade.assessmentType || grade.AssessmentType;
                    const gradePoint = parseFloat(grade.gradePoint || grade.GradePoint) || null;
                    
                    if (assessmentType === 'Midterm') {
                        classGradesMap[key].midterm = gradePoint;
                    } else if (assessmentType === 'Final Grade') {
                        classGradesMap[key].final = gradePoint;
                    }
                });
            }

            container.innerHTML = `
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Section</th>
                                <th>Teacher</th>
                                <th>Schedule</th>
                                <th>Room</th>
                                <th>EDP Code</th>
                                <th>Status</th>
                                <th>Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${classes.map(c => {
                                // Calculate overall grade for this class
                                const classGrade = classGradesMap[c.id];
                                let overallGrade = null;
                                if (classGrade && classGrade.midterm !== null && classGrade.final !== null) {
                                    // Calculate overall: 40% midterm + 60% final
                                    overallGrade = ((classGrade.midterm * 0.4) + (classGrade.final * 0.6)).toFixed(2);
                                } else if (classGrade && classGrade.final !== null) {
                                    overallGrade = classGrade.final.toFixed(2);
                                } else if (classGrade && classGrade.midterm !== null) {
                                    overallGrade = classGrade.midterm.toFixed(2);
                                }
                                
                                const gradeDisplay = overallGrade 
                                    ? `<span class="badge ${parseFloat(overallGrade) <= 3.0 ? 'bg-success' : 'bg-danger'}">${overallGrade}</span>`
                                    : '<span class="text-muted">-</span>';
                                
                                return `
                                <tr>
                                    <td>${c.subjectName || 'N/A'}</td>
                                    <td>${c.sectionName || 'N/A'}</td>
                                    <td>${c.teacherName || 'TBA'}</td>
                                    <td>${c.schedule || 'TBA'}</td>
                                    <td>${c.room || 'TBA'}</td>
                                    <td><code>${c.edpCode || 'N/A'}</code></td>
                                    <td>
                                        <span class="badge ${c.status === 'Enrolled' ? 'bg-success' : c.status === 'Pending' ? 'bg-warning' : 'bg-secondary'}">
                                            ${c.status || 'N/A'}
                                        </span>
                                    </td>
                                    <td>${gradeDisplay}</td>
                                </tr>
                            `;
                            }).join('')}
                        </tbody>
                    </table>
                </div>
            `;
        }

        function displayGradesSummary(grades) {
            const container = document.getElementById('viewStudentGrades');
            if (!grades || grades.length === 0) {
                container.innerHTML = '<p class="text-muted mb-0">No grades found.</p>';
                return;
            }

            // Group grades by subject
            const groupedGrades = {};
            grades.forEach(g => {
                const subjectName = g.subjectName || g.SubjectName || 'Unknown';
                const sectionName = g.sectionName || g.SectionName || 'Unknown';
                const key = `${subjectName} - ${sectionName}`;
                if (!groupedGrades[key]) {
                    groupedGrades[key] = {
                        subject: subjectName,
                        section: sectionName,
                        grades: []
                    };
                }
                groupedGrades[key].grades.push(g);
            });

            container.innerHTML = `
                <div class="accordion" id="gradesAccordion">
                    ${Object.entries(groupedGrades).map(([key, group], index) => `
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading${index}">
                                <button class="accordion-button ${index === 0 ? '' : 'collapsed'}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse${index}">
                                    ${group.subject} <span class="text-muted ms-2">(${group.section})</span>
                                    <span class="badge bg-primary ms-2">${group.grades.length} assessments</span>
                                </button>
                            </h2>
                            <div id="collapse${index}" class="accordion-collapse collapse ${index === 0 ? 'show' : ''}" data-bs-parent="#gradesAccordion">
                                <div class="accordion-body">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Assessment</th>
                                                    <th>Type</th>
                                                    <th>Grade Point</th>
                                                    <th>Remarks</th>
                                                    <th>Date</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                ${group.grades.map(g => {
                                                    const gradePoint = parseFloat(g.gradePoint || g.GradePoint) || 0;
                                                    const assessmentName = g.assessmentName || g.AssessmentName || '';
                                                    const assessmentType = g.assessmentType || g.AssessmentType || 'N/A';
                                                    const remarks = g.remarks || g.Remarks || '-';
                                                    const dateGiven = g.dateGiven || g.DateGiven;
                                                    
                                                    const statusBadge = gradePoint > 0 
                                                        ? `<span class="badge ${gradePoint <= 3.0 ? 'bg-success' : 'bg-danger'}">${gradePoint <= 3.0 ? 'PASS' : 'FAIL'}</span>`
                                                        : '<span class="badge bg-warning">Pending</span>';
                                                    
                                                    return `
                                                    <tr>
                                                        <td>${assessmentName || assessmentType || 'N/A'}</td>
                                                        <td>${assessmentType}</td>
                                                        <td><strong>${gradePoint > 0 ? gradePoint.toFixed(2) : '-'}</strong></td>
                                                        <td>${remarks}</td>
                                                        <td>${dateGiven ? new Date(dateGiven).toLocaleDateString() : 'N/A'}</td>
                                                        <td>${statusBadge}</td>
                                                    </tr>
                                                `;
                                                }).join('')}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        // Pagination functions
        function updatePagination() {
            const showingFrom = totalCount > 0 ? (currentPage - 1) * pageSize + 1 : 0;
            const showingTo = Math.min(currentPage * pageSize, totalCount);
            
            document.getElementById('showingFrom').textContent = showingFrom;
            document.getElementById('showingTo').textContent = showingTo;
            document.getElementById('totalCount').textContent = totalCount;
            
            renderPaginationButtons();
        }

        function renderPaginationButtons() {
            const pagination = document.getElementById('pagination');
            if (!pagination || totalPages === 0) {
                pagination.innerHTML = '';
                return;
            }
            
            pagination.innerHTML = '';
            
            // Previous button
            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${currentPage - 1}); return false;">Previous</a>`;
            pagination.appendChild(prevLi);
            
            // Always show first page
            if (currentPage > 3) {
                const firstLi = document.createElement('li');
                firstLi.className = 'page-item';
                firstLi.innerHTML = `<a class="page-link" href="#" onclick="goToPage(1); return false;">1</a>`;
                pagination.appendChild(firstLi);
                
                // Add ellipsis if there's a gap
                if (currentPage > 4) {
                    const ellipsisLi = document.createElement('li');
                    ellipsisLi.className = 'page-item disabled';
                    ellipsisLi.innerHTML = `<span class="page-link">...</span>`;
                    pagination.appendChild(ellipsisLi);
                }
            }
            
            // Show pages around current page
            const startPage = Math.max(1, currentPage - 1);
            const endPage = Math.min(totalPages, currentPage + 1);
            
            for (let i = startPage; i <= endPage; i++) {
                const li = document.createElement('li');
                li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                li.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${i}); return false;">${i}</a>`;
                pagination.appendChild(li);
            }
            
            // Always show last page
            if (currentPage < totalPages - 2) {
                // Add ellipsis if there's a gap
                if (currentPage < totalPages - 3) {
                    const ellipsisLi = document.createElement('li');
                    ellipsisLi.className = 'page-item disabled';
                    ellipsisLi.innerHTML = `<span class="page-link">...</span>`;
                    pagination.appendChild(ellipsisLi);
                }
                
                const lastLi = document.createElement('li');
                lastLi.className = 'page-item';
                lastLi.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${totalPages}); return false;">${totalPages}</a>`;
                pagination.appendChild(lastLi);
            }
            
            // Next button
            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${currentPage === totalPages || totalPages === 0 ? 'disabled' : ''}`;
            nextLi.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${currentPage + 1}); return false;">Next</a>`;
            pagination.appendChild(nextLi);
        }

        function goToPage(page) {
            if (page < 1 || page > totalPages) return;
            const searchValue = document.getElementById('searchText')?.value.trim() || '';
            if (searchValue) {
                searchStudents(page);
            } else {
                loadStudents(page);
            }
        }

        // Store all students for client-side filtering
        let allStudents = [];

        // Load all students for search
        async function loadAllStudents() {
            try {
                const response = await fetch(`/api/v1/student?page=1&pageSize=1000`);
                if (response.ok) {
                    const result = await response.json();
                    allStudents = result.data || [];
                }
            } catch (error) {
                console.error('Error loading all students:', error);
            }
        }

        // Search students (client-side filtering)
        async function searchStudents(page = 1) {
            const searchValue = (document.getElementById('searchText')?.value || '').toLowerCase().trim();
            
            if (!searchValue) {
                loadStudents(page);
                return;
            }

            // Load all students if not already loaded
            if (allStudents.length === 0) {
                await loadAllStudents();
            }

            // Filter students
            const filtered = allStudents.filter(s => {
                const fullName = `${s.firstName || ''} ${s.lastName || ''}`.toLowerCase();
                const studentId = (s.studentId || '').toLowerCase();
                const email = (s.email || '').toLowerCase();
                const courseName = (s.courseName || '').toLowerCase();
                
                return fullName.includes(searchValue) ||
                       studentId.includes(searchValue) ||
                       email.includes(searchValue) ||
                       courseName.includes(searchValue);
            });

            // Paginate filtered results
            const startIndex = (page - 1) * pageSize;
            const endIndex = startIndex + pageSize;
            const paginatedResults = filtered.slice(startIndex, endIndex);

            totalCount = filtered.length;
            totalPages = Math.ceil(totalCount / pageSize);
            currentPage = page;

            displayStudents(paginatedResults);
            updatePagination();
        }

        // Handle search input with debounce
        let searchTimeout;
        function handleSearchInput(event) {
            clearTimeout(searchTimeout);
            
            if (event.key === 'Enter') {
                searchStudents(1);
                return;
            }
            
            searchTimeout = setTimeout(() => {
                const searchValue = document.getElementById('searchText')?.value.trim() || '';
                if (searchValue.length > 0) {
                    searchStudents(1);
                } else {
                    loadStudents(1);
                }
            }, 500);
        }


