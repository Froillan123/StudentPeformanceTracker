    <script>
        // Toggle sidebar functionality
        document.getElementById('toggleBtn').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const toggleIcon = this.querySelector('i');
            
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
            
            if (sidebar.classList.contains('collapsed')) {
                toggleIcon.classList.remove('fa-chevron-left');
                toggleIcon.classList.add('fa-chevron-right');
            } else {
                toggleIcon.classList.remove('fa-chevron-right');
                toggleIcon.classList.add('fa-chevron-left');
            }
        });
        
        // Set active menu item
        document.querySelectorAll('.sidebar-menu a').forEach(item => {
            if (item.getAttribute('href') === window.location.pathname) {
                item.classList.add('active');
            }
            
            item.addEventListener('click', function() {
                document.querySelectorAll('.sidebar-menu a').forEach(link => {
                    link.classList.remove('active');
                });
                this.classList.add('active');
            });
        });

        // Export functionality
        document.querySelectorAll('.export-option').forEach(option => {
            option.addEventListener('click', function(e) {
                e.preventDefault();
                const format = this.getAttribute('data-format');
                const tableType = this.getAttribute('data-table');
                exportGrades(format, tableType);
            });
        });

        // Function to export grades
        function exportGrades(format, tableType) {
            let tableId = '';
            let fileName = '';
            
            // Determine which table to export based on tableType
            if (tableType === 'current') {
                tableId = 'currentGradesTable';
                fileName = 'Current_Quarter_Grades';
            } else if (tableType === 'previous') {
                tableId = 'previousGradesTable';
                fileName = 'Previous_Quarters_Grades';
            } else if (tableType === 'transcript') {
                tableId = 'transcriptTable';
                fileName = 'Grade_Transcript';
            } else if (tableType === 'all') {
                // For exporting all grades, we'll use the active tab
                let activeTab = document.querySelector('.tab-pane.active');
                if (activeTab.id === 'current') {
                    tableId = 'currentGradesTable';
                    fileName = 'All_Current_Grades';
                } else if (activeTab.id === 'previous') {
                    tableId = 'previousGradesTable';
                    fileName = 'All_Previous_Grades';
                } else if (activeTab.id === 'transcript') {
                    tableId = 'transcriptTable';
                    fileName = 'All_Grade_Transcript';
                }
            }
            
            const table = document.getElementById(tableId);
            
            if (!table) {
                showToast('No data available for export', 'error');
                return;
            }
            
            switch(format) {
                case 'excel':
                    exportToExcel(table, fileName);
                    break;
                case 'csv':
                    exportToCSV(table, fileName);
                    break;
                case 'pdf':
                    exportToPDF(table, fileName);
                    break;
                case 'print':
                    printTable(table);
                    break;
            }
        }

        // Export to Excel
        function exportToExcel(table, fileName) {
            try {
                // Create a new workbook
                const wb = XLSX.utils.book_new();
                
                // Convert table to worksheet
                const ws = XLSX.utils.table_to_sheet(table);
                
                // Add worksheet to workbook
                XLSX.utils.book_append_sheet(wb, ws, "Grades");
                
                // Generate Excel file and trigger download
                XLSX.writeFile(wb, `${fileName}.xlsx`);
                
                showToast('Excel file downloaded successfully', 'success');
            } catch (error) {
                console.error('Error exporting to Excel:', error);
                showToast('Error exporting to Excel', 'error');
            }
        }

        // Export to CSV
        function exportToCSV(table, fileName) {
            try {
                // Get table data
                const rows = Array.from(table.querySelectorAll('tr'));
                const csvContent = [];
                
                // Process each row
                rows.forEach(row => {
                    const rowData = [];
                    const cells = row.querySelectorAll('th, td');
                    
                    cells.forEach(cell => {
                        // Get cell text, removing any HTML tags
                        let cellText = cell.innerText || cell.textContent || '';
                        
                        // Handle badges and special formatting
                        const badge = cell.querySelector('.badge');
                        if (badge) {
                            cellText = badge.innerText;
                        }
                        
                        // Escape quotes and wrap in quotes if contains comma
                        if (cellText.includes(',') || cellText.includes('"')) {
                            cellText = '"' + cellText.replace(/"/g, '""') + '"';
                        }
                        
                        rowData.push(cellText);
                    });
                    
                    csvContent.push(rowData.join(','));
                });
                
                // Create CSV blob and trigger download
                const blob = new Blob([csvContent.join('\n')], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);
                
                link.setAttribute('href', url);
                link.setAttribute('download', `${fileName}.csv`);
                link.style.visibility = 'hidden';
                
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                showToast('CSV file downloaded successfully', 'success');
            } catch (error) {
                console.error('Error exporting to CSV:', error);
                showToast('Error exporting to CSV', 'error');
            }
        }

        // Export to PDF (simplified version - in a real app, you'd use a library like jsPDF)
        function exportToPDF(table, fileName) {
            showToast('PDF export would open a print dialog. For full PDF export, additional libraries are needed.', 'info');
            
            // For a simple implementation, we'll use the browser's print functionality
            printTable(table);
        }

        // Print table
        function printTable(table) {
            // Create a new window for printing
            const printWindow = window.open('', '_blank');
            const tableClone = table.cloneNode(true);
            
            // Create print-friendly HTML
            printWindow.document.write(`
                <html>
                    <head>
                        <title>${document.title}</title>
                        <style>
                            body { font-family: Arial, sans-serif; margin: 20px; }
                            table { width: 100%; border-collapse: collapse; }
                            th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
                            th { background-color: #4CAF50; color: white; }
                            .badge { padding: 3px 8px; border-radius: 4px; color: white; }
                            .bg-success { background-color: #28a745; }
                            .bg-warning { background-color: #ffc107; color: black; }
                        </style>
                    </head>
                    <body>
                        <h2>${document.querySelector('.section-title').innerText}</h2>
                        ${tableClone.outerHTML}
                        <p>Generated on: ${new Date().toLocaleDateString()}</p>
                    </body>
                </html>
            `);
            
            printWindow.document.close();
            printWindow.focus();
            
            // Wait for content to load then print
            setTimeout(() => {
                printWindow.print();
                printWindow.close();
            }, 250);
            
            showToast('Print dialog opened', 'info');
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            const toastId = 'toast-' + Date.now();
            
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'error' ? 'danger' : type === 'success' ? 'success' : 'info'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            toast.id = toastId;
            
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Initialize and show the toast
            const bsToast = new bootstrap.Toast(toast, { delay: 3000 });
            bsToast.show();
            
            // Remove toast from DOM after it's hidden
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }
